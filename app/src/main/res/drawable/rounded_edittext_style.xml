<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Item 1: This creates the outline (border) for the EditText -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <!-- Uses lightGray for a non-intrusive border -->
            <stroke
                android:width="1dp"
                android:color="@color/lightGray" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Item 2: This is the inner, white fill area. It's slightly smaller
         than the outline to reveal the 1dp border. -->
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>
