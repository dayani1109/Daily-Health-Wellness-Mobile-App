<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
        Sets the interior color of the row. Using white for a clean,
        high-contrast look that makes the text pop.
    -->
    <solid android:color="@android:color/white"/>

    <!--
        Adds a subtle 1dp border (stroke) using your defined light green color
        to give the row definition and separate it from the white background
        of the overall fragment.
    -->
    <stroke
        android:width="1dp"
        android:color="@color/lightGreen"/>

    <!--
        Defines the radius for the corners (12dp is a good, noticeable curve).
    -->
    <corners android:radius="12dp"/>

    <!--
        Optional: Adding a slight shadow for depth. This requires the row
        to have an elevation in the layout XML, but is defined here for completeness.
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"/>
    -->

</shape>
