<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.fragments.CreateMoodFragment">

    <!-- Header / Title -->
    <TextView
        android:id="@+id/tvCreateMoodTitle"
        android:layout_width="419dp"
        android:layout_height="92dp"
        android:background="@color/MainGreen"
        android:gravity="center"
        android:text="Create Mood Journal"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Date and Time Row (Interactive container for selecting date/time) -->
    <LinearLayout
        android:id="@+id/dateTimeRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_row_bg"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCreateMoodTitle">

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Date: October 16, 2025"
            android:textColor="@color/MainGreen"
            android:textSize="17sp"
             />

        <TextView
            android:id="@+id/tvSelectedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Time: 10:30 AM"
            android:textColor="@color/MainGreen"
            android:textSize="17sp"
             />
    </LinearLayout>

    <!-- Emoji Selection Row (Touch feedback added to each emoji) -->
    <LinearLayout
        android:id="@+id/emojiRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="8dp"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTimeRow">

        <!-- All emoji TextViews are now explicitly clickable and show a ripple effect -->
        <TextView
            android:id="@+id/emoji_happy"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ˜Š"
            android:textSize="44sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/emoji_sad"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ˜¢"
            android:textSize="44sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/emoji_angry"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ˜¡"
            android:textSize="44sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/emoji_neutral"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ˜"
            android:textSize="44sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/emoji_excited"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ¤©"
            android:textSize="44sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Journal Message (Increased height for better usability) -->
    <EditText
        android:id="@+id/etMoodJournal"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:hint="Write your mood details..."
        android:gravity="top|start"
        android:padding="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/emojiRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"/>

    <!-- Feeling Buttons (Better spacing and style to act as a segmented control) -->
    <LinearLayout
        android:id="@+id/feelingRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etMoodJournal">

        <!-- Added `layout_marginEnd` to all but the last one for even spacing -->
        <Button
            android:id="@+id/btnLow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/MintGreen"
            android:text="Low"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btnMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/MintGreen"
            android:text="Medium"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btnHigh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/MintGreen"
            android:text="High"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Save Button (Prominent Call to Action) -->
    <Button
        android:id="@+id/btnSaveMood"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/MainGreen"
        android:text="Save Mood Journal"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feelingRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>
