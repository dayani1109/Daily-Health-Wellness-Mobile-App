<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.fragments.MeditationFragment">

    <!-- Title Bar (Modernized) -->
    <TextView
        android:id="@+id/tvMeditationTitle"
        android:layout_width="424dp"
        android:layout_height="86dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="Meditation Tracker ðŸ§˜"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Arrow (Ensure it has touch target area) -->
    <ImageView
        android:id="@+id/meditation_back_arrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/new_backarrow"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/tvMeditationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvMeditationTitle"/>

    <!-- Meditation Input Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inputCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@drawable/rounded_input_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMeditationTitle">

        <!-- Date Picker (Full width button) -->
        <Button
            android:id="@+id/btnSelectDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            android:backgroundTint="@color/MainGreen"
            android:text="Select Date"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Time Input (Styled EditText) -->
        <EditText
            android:id="@+id/etMeditationTime"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:hint="Enter minutes (e.g., 10)"
            android:inputType="numberDecimal"
            android:paddingHorizontal="16dp"
            android:background="@drawable/rounded_edittext_style"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btnSelectDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Control Group (Start/Stop Buttons) -->
    <LinearLayout
        android:id="@+id/controlGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/inputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Start Button -->
        <Button
            android:id="@+id/btnStartMeditation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/MainGreen"
            android:text="Start"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            android:textStyle="bold"/>

        <!-- Stop Button -->
        <Button
            android:id="@+id/btnStopMeditation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/holo_red_dark"
            android:text="Stop"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Live Tracker Card (Dominant Visual Element) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/trackerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:paddingVertical="12dp"
        android:background="@drawable/tracker_card_bg"
        app:layout_constraintTop_toBottomOf="@id/controlGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Timer Text (Large and prominent) -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@color/MainGreen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Progress Bar (Styled, full width) -->
        <ProgressBar
            android:id="@+id/progressMeditation"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/MainGreen"
            android:progressBackgroundTint="@color/lightGray"
            app:layout_constraintTop_toBottomOf="@id/tvTimer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Weekly Chart Label -->
    <TextView
        android:id="@+id/tvWeeklyMeditation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Weekly Meditation Progress"
        android:textColor="@color/teal_700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/trackerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Weekly Bar Chart -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartMeditation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvWeeklyMeditation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minHeight="150dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
