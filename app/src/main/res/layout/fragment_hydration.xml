<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvHydrationTitle"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:background="@color/teal_700"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Hydration Reminder ðŸ’§"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hydration_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_backarrow"
        app:layout_constraintBottom_toBottomOf="@+id/tvHydrationTitle"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReminderSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_background_white"
        android:padding="16dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvHydrationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvReminderTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’§ Set Reminder Time:"
            android:textSize="16sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSelectedDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No time selected"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvReminderTimeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnPickDateTime"/>

        <Button
            android:id="@+id/btnPickDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/MainGreen"
            android:text="Pick Time"
            android:drawableStart="@android:drawable/ic_lock_idle_alarm"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvReminderTimeLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnSetReminder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/MainGreen"
            android:text="Activate Reminder"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSelectedDateTime" />

        <Button
            android:id="@+id/btnDeleteReminder"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Delete Reminder"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:drawableStart="@android:drawable/ic_menu_delete"
            app:layout_constraintTop_toBottomOf="@id/btnSetReminder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvWaterInputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="ðŸ’¦ Log Your Water Intake (ml):"
        android:textSize="16sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clReminderSection" />

    <LinearLayout
        android:id="@+id/llWaterInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:background="@drawable/rounded_border"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvWaterInputLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etWaterAmount"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="e.g., 250"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:paddingHorizontal="8dp"
            android:maxLength="4"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnLogWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/MainGreen"
            android:text="Add"
            android:drawableStart="@drawable/ic_add_circle"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWeeklyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:text="ðŸ“Š Weekly Hydration Progress"
        android:textColor="@color/teal_700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/llWaterInput"
        app:layout_constraintStart_toStartOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/waterLineChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:background="@drawable/rounded_background_lightgray"
        app:layout_constraintTop_toBottomOf="@id/tvWeeklyLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintVertical_bias="0"
        tools:layout_height="200dp" />

</androidx.constraintlayout.widget.ConstraintLayout>