<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/task_item_bg">

    <!-- Task Completed Checkbox -->
    <CheckBox
        android:id="@+id/cbTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <!-- Task Name -->
    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/cbTask"
        app:layout_constraintTop_toTopOf="@id/cbTask"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteTask"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <!-- Task Date -->
    <TextView
        android:id="@+id/tvTaskDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="01 Oct 2025"
        android:textSize="14sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/tvTaskName"
        app:layout_constraintTop_toBottomOf="@id/tvTaskName"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteTask"
        android:layout_marginTop="4dp"/>

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btnDeleteTask"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete Task"
        android:src="@drawable/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Extra: Progress Indicator for Each Task (optional small bar) -->

</androidx.constraintlayout.widget.ConstraintLayout>
