<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeFragment">

    <!-- Top Background Block (Light Green/Mint Header) -->
    <View
        android:id="@+id/header_background"
        android:layout_width="412dp"
        android:layout_height="202dp"
        android:background="@color/MainGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 1. Top App Bar & Icons -->

    <!-- Main Goal Title -->

    <!-- 2. Date Picker/Calendar Strip (Fixed 7 Days View with Modern Styling) -->
    <!-- We wrap the linear layout in a HorizontalScrollView to allow scrolling and added top rounded corners via a drawable -->

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="Menu"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/title_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:letterSpacing="0.05"
        android:text="HOME"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/menu_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/menu_icon"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/goal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4dp"
        android:text="Create Your Goal for Your Future"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_home" />

    <HorizontalScrollView
        android:id="@+id/date_strip"
        android:layout_width="412dp"
        android:layout_height="112dp"
        android:background="@drawable/rounded_top_strip_bg"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_background">

        <LinearLayout
            android:id="@+id/date_strip_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Week Dates (Dynamic from Code) - Apply modern chip style to DayTextStyle -->
            <TextView
                android:id="@+id/tv_day1"
                style="@style/DayTextStyle"
                android:layout_marginEnd="8dp"
                android:background="@drawable/day_chip_unselected"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_day2"
                style="@style/DayTextStyle"
                android:layout_marginEnd="8dp"
                android:background="@drawable/day_chip_unselected"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_day3"
                style="@style/DayTextStyle"
                android:layout_marginEnd="8dp"
                android:background="@drawable/day_chip_selected"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_day4"
                style="@style/DayTextStyle"
                android:layout_marginEnd="8dp"
                android:background="@drawable/day_chip_unselected"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_day5"
                style="@style/DayTextStyle"
                android:layout_marginEnd="8dp"
                android:background="@drawable/day_chip_unselected"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_day6"
                style="@style/DayTextStyle"
                android:layout_marginEnd="8dp"
                android:background="@drawable/day_chip_unselected"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_day7"
                style="@style/DayTextStyle"
                android:background="@drawable/day_chip_unselected"
                android:padding="8dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 3. Scrollable Habit Cards Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/date_strip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav">

        <GridLayout
            android:id="@+id/habit_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingHorizontal="8dp"
            android:useDefaultMargins="true">

            <!-- Card 1: Daily Habit (Modernized) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_daily_habit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#EAF7F4"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <!-- Image Asset -->
                    <ImageView
                        android:id="@+id/iv_daily_habit_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/daily_habit_icon"
                        android:src = "@drawable/perdailyhabit"
                        app:tint="@color/MainGreen"/>

                    <TextView
                        android:id="@+id/tv_daily_habit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Daily Habit"
                        android:textColor="@color/MainGreen"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Hydrating (Modernized) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_hydrating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#EAF7F4"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <!-- Image Asset -->
                    <ImageView
                        android:id="@+id/iv_hydrating_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/hydrating_icon"
                        android:src = "@drawable/perhydrating"
                        app:tint="@color/MainGreen"/>

                    <TextView
                        android:id="@+id/tv_hydrating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Hydrating"
                        android:textColor="@color/MainGreen"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Meditation (Modernized) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_meditation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#EAF7F4"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <!-- Image Asset -->
                    <ImageView
                        android:id="@+id/iv_meditation_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/meditation_icon"
                        android:src = "@drawable/permeditate"
                        app:tint="@color/MainGreen"/>

                    <TextView
                        android:id="@+id/tv_meditation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Meditation"
                        android:textColor="@color/MainGreen"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4: Mood Journal (Modernized) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_mood_journal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#EAF7F4"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <!-- Image Asset -->
                    <ImageView
                        android:id="@+id/iv_mood_journal_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/mood_journal_icon"
                        android:src = "@drawable/perjournaling"
                        app:tint="@color/MainGreen"/>

                    <TextView
                        android:id="@+id/tv_mood_journal_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Mood Journal"
                        android:textColor="@color/MainGreen"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>


    <!-- 4. Bottom Navigation Bar (Fixed at the bottom) -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/MainGreen"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home (Added Interactive Feedback and Tint) -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Home"
                android:src="@drawable/home"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Search (Added Interactive Feedback and Tint) -->
        <LinearLayout
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Search"
                android:src="@drawable/search"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profile (Added Interactive Feedback and Tint) -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Profile"
                android:src="@drawable/profile"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Settings (Added Interactive Feedback and Tint) -->
        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Settings"
                android:src="@drawable/settings"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
