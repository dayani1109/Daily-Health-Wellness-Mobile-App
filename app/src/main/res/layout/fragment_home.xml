<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeFragment">

    <!-- Top Background Block (Light Green/Mint Header) -->
    <View
        android:id="@+id/header_background"
        android:layout_width="417dp"
        android:layout_height="210dp"
        android:background="@color/MainGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top App Bar & Icons -->

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="Menu"
        android:src="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <!-- Main Goal Title -->

    <!-- Date Picker/Calendar Strip (Nested in a container to manage margin) -->
    <!-- The Date strip is positioned overlapping the header and the main content -->

    <!-- Scrollable Habit Cards Content -->

    <TextView
        android:id="@+id/title_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="serif"
        android:letterSpacing="0.1"
        android:text="HOME"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/menu_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/menu_icon"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/goal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-black"
        android:text="Create Your Goal for Your Future"
        android:textColor="#FDFBFB"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_home" />

    <LinearLayout
        android:id="@+id/date_strip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_background">

        <!-- Week Dates (Dynamic from Code) -->
        <TextView
            android:id="@+id/tv_day1"
            style="@style/DayTextStyle"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_day2"
            style="@style/DayTextStyle"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_day3"
            style="@style/DayTextStyle"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_day4"
            style="@style/DayTextStyle"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_day5"
            style="@style/DayTextStyle"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_day6"
            style="@style/DayTextStyle"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_day7"
            style="@style/DayTextStyle"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/date_strip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav">

        <GridLayout
            android:id="@+id/habit_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Card 1: Daily Habit -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_daily_habit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#C7E5DB"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <!-- Placeholder for Image Asset (Water Drop Guy) -->
                    <ImageView
                        android:id="@+id/iv_daily_habit_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#C4E0E0"
                        android:contentDescription="@string/daily_habit_icon"
                        android:src = "@drawable/perdailyhabit"/>

                    <TextView
                        android:id="@+id/tv_daily_habit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Daily Habit"
                        android:textColor="#336666"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Hydrating -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_hydrating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#C7E5DB"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <!-- Placeholder for Image Asset (Water Drop Guy) -->
                    <ImageView
                        android:id="@+id/iv_hydrating_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#C4E0E0"
                        android:contentDescription="@string/hydrating_icon"
                        android:src = "@drawable/perhydrating"/>

                    <TextView
                        android:id="@+id/tv_hydrating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Hydrating"
                        android:textColor="#336666"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Meditation -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_meditation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#C7E5DB"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <!-- Placeholder for Image Asset (Water Drop Guy) -->
                    <ImageView
                        android:id="@+id/iv_meditation_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#C4E0E0"
                        android:contentDescription="@string/meditation_icon"
                        android:src = "@drawable/permeditate"/>

                    <TextView
                        android:id="@+id/tv_meditation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Meditation"
                        android:textColor="#336666"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4: Mood Journal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_mood_journal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#C7E5DB"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <!-- Placeholder for Image Asset (Notebook/Glasses) -->
                    <ImageView
                        android:id="@+id/iv_mood_journal_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#C4E0E0"
                        android:contentDescription="@string/mood_journal_icon"
                        android:src = "@drawable/perjournaling"/>

                    <TextView
                        android:id="@+id/tv_mood_journal_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Mood Journal"
                        android:textColor="#336666"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>


    <!-- Bottom Navigation Bar (Fixed at the bottom) -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="414dp"
        android:layout_height="78dp"
        android:background="@color/MainGreen"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Home"
                android:src="@drawable/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Search"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Profile"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Settings"
                android:src="@drawable/settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
